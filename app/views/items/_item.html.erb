<li class='list'>
        <div class='item-img-content'>
        <%= link_to item_path(item.id) do %>
          <%= image_tag item.image, class: "item-img"%>
        <% end %>
        <% if item.image ==nil %>
         <div class='sold-out'>
            <span>Sold Out!!</span>
          </div>
         <% end %>
        </div>
        <div class='item-info'>
        <h3 class="item-name">
         <%= item.name %>
        </h3>
        <div class='item-price'>
        <span><%= "販売価格" %><%= item.price %>円<br><%= '(税込み)' %></span>
        <div class='star-btn'>
              <%= image_tag "star.png", class:"star-icon" %>
              <span class='star-count'>0</span>
            </div>
        </div>
        </div>  